<?xml version="1.0" encoding="UTF-8"?>

<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">  
  
<bean id="author" class="com.demo.Author" autowire="constructor">
<constructor-arg value="101" type="int"></constructor-arg>
<constructor-arg value="J.K. Rolling"></constructor-arg>
<constructor-arg value="8956756422"></constructor-arg>
</bean>

<bean id="book" class="com.demo.Book" autowire="constructor">
	<constructor-arg value="101" type="int"></constructor-arg>
	<constructor-arg value="Harry Potter"></constructor-arg>
</bean>
</beans>